server {
        listen 0.0.0.0:8000;
        client_max_body_size 1024M;
        location / {
                uwsgi_pass unix:///tmp/uwsgi-moztrap.sock;
                include uwsgi_params;
        }

        location /static {
                autoindex off;
                alias /moztrap/collected-assets;
        }
}
